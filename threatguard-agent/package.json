{
  "name": "threatguard-agent",
  "version": "2.0.1",
  "description": "Zero-configuration endpoint security collector built on Fluent Bit",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:wrapper && npm run build:fluent-bit && npm run build:installers",
    "build:wrapper": "tsc && npm run copy-assets",
    "build:fluent-bit": "npm run build:configs && npm run build:plugins",
    "build:configs": "node scripts/build-configs.js",
    "build:plugins": "node scripts/build-plugins.js",
    "build:installers": "npm run build:windows && npm run build:linux && npm run build:macos",
    "build:windows": "node scripts/build-windows-installer.js",
    "build:linux": "node scripts/build-linux-packages.js",
    "build:macos": "node scripts/build-macos-installer.js",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "npm run build:wrapper && node dist/index.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest src/**/*.test.ts",
    "test:integration": "jest tests/integration/**/*.test.ts",
    "test:e2e": "jest tests/e2e/**/*.test.ts",
    "test:windows": "npm run test -- --testPathPattern=windows",
    "test:linux": "npm run test -- --testPathPattern=linux",
    "test:macos": "npm run test -- --testPathPattern=macos",
    "benchmark": "node tests/performance/benchmark-suite.js",
    "lint": "eslint src/ --ext .ts,.js",
    "format": "prettier --write src/ tests/",
    "clean": "rimraf dist/ build/ installers/output/",
    "package": "npm run build && npm run package:all",
    "package:all": "npm run package:windows && npm run package:linux && npm run package:macos",
    "package:windows": "node scripts/package-windows.js",
    "package:linux": "node scripts/package-linux.js",
    "package:macos": "node scripts/package-macos.js",
    "setup-dev": "node scripts/setup-development.js",
    "validate": "npm run lint && npm run test",
    "release": "npm run validate && npm run build && npm run package",
    "test:agent": "node scripts/test-agent.js",
    "build:agent": "node scripts/build.js",
    "quick-start": "npm install && npm run build:agent && echo 'ThreatGuard Agent ready! Run: ./dist/threatguard-agent --help'"
  },
  "keywords": [
    "security",
    "endpoint",
    "collector",
    "fluent-bit",
    "zero-config",
    "enterprise",
    "threat-detection",
    "log-collection"
  ],
  "author": "BG Threat AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bg-threat-ai/threatguard-agent.git"
  },
  "bugs": {
    "url": "https://github.com/bg-threat-ai/threatguard-agent/issues"
  },
  "homepage": "https://threatguard.ai",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "express": "^4.18.0",
    "node-machine-id": "^1.1.12",
    "yaml": "^2.3.0",
    "winston": "^3.11.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32",
    "linux",
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist/",
    "configs/",
    "LICENSE",
    "README.md"
  ],
  "build": {
    "appId": "com.bg-threat.threatguard-agent",
    "productName": "ThreatGuard Agent",
    "directories": {
      "output": "installers/output/"
    },
    "files": [
      "dist/",
      "configs/",
      "assets/"
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Security"
    },
    "mac": {
      "target": [
        {
          "target": "pkg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.security"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  }
}