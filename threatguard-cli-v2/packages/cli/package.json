{
  "name": "@threatguard/cli",
  "version": "2.0.0",
  "description": "ThreatGuard CLI - Console-based threat detection and behavioral analysis",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "threatguard": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@threatguard/core": "workspace:*",
    "@threatguard/ui-components": "workspace:*",
    "yargs": "^17.7.2",
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "conf": "^12.0.0",
    "update-notifier": "^7.0.0",
    "figures": "^6.0.1",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/yargs": "^17.0.32",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "esbuild": "^0.19.11"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "preferGlobal": true,
  "keywords": [
    "threatguard",
    "cli",
    "security",
    "threat-detection",
    "terminal"
  ]
}