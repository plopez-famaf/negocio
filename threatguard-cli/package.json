  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "blessed": "^0.1.81",
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "asciichart": "^1.5.25",
    "moment": "^2.29.4",
    "ora": "^5.4.1",
    "figlet": "^1.7.0",
    "conf": "^11.0.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/blessed": "^0.1.25",
