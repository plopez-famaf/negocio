{
  "name": "threatguard-service-communication-tests",
  "version": "1.0.0",
  "description": "Comprehensive service communication testing suite for Console-First Threat Detection Platform",
  "main": "run-all-tests.js",
  "scripts": {
    "test": "node run-all-tests.js",
    "test:api": "node integration/api-endpoints.test.js",
    "test:websocket": "node integration/websocket-communication.test.js", 
    "test:cli": "node e2e/cli-service-integration.test.js",
    "test:integration": "node integration/api-endpoints.test.js && node integration/websocket-communication.test.js",
    "test:e2e": "node e2e/cli-service-integration.test.js",
    "install": "npm install --prefix ../threatguard-cli",
    "setup": "npm run install && echo 'Test environment setup complete'"
  },
  "keywords": [
    "testing",
    "integration",
    "e2e",
    "threat-detection",
    "console-cli",
    "websocket",
    "api"
  ],
  "author": "ThreatGuard Security",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": false
}