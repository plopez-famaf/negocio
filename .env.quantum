# BehaviorGuard Quantum-Secure AI Services Configuration
# This file contains environment variables for quantum-enhanced services

# ============================================================================
# QUANTUM CRYPTOGRAPHY SETTINGS
# ============================================================================

# Enable quantum-resistant cryptography
QUANTUM_ENABLED=true

# Post-quantum cryptographic algorithms
QUANTUM_KEM_ALGORITHM=Kyber768
QUANTUM_SIG_ALGORITHM=Dilithium3
QUANTUM_HASH_ALGORITHM=SHA3-256

# Quantum security levels (1, 3, 5 corresponding to AES 128, 192, 256 bit equivalent)
QUANTUM_SECURITY_LEVEL=3

# Quantum key lifecycle settings
QUANTUM_KEY_ROTATION_INTERVAL=86400  # 24 hours in seconds
QUANTUM_KEY_EXPIRY_WARNING=3600      # 1 hour warning before expiry
QUANTUM_KEY_BACKUP_ENABLED=true

# Hybrid authentication settings
HYBRID_AUTH_ENABLED=true
CLASSICAL_FALLBACK_ENABLED=true
QUANTUM_MIGRATION_MODE=gradual

# ============================================================================
# NVIDIA MORPHEUS CONFIGURATION
# ============================================================================

# Enable GPU-accelerated threat detection
MORPHEUS_ENABLED=true
GPU_ACCELERATION=auto
CUDA_VISIBLE_DEVICES=0

# Morpheus pipeline settings
MORPHEUS_PIPELINE_BATCH_SIZE=1024
MORPHEUS_EDGE_BUFFER_SIZE=128
MORPHEUS_MODEL_MAX_BATCH_SIZE=1024
MORPHEUS_FEATURE_LENGTH=256

# Performance targets
MORPHEUS_TARGET_THROUGHPUT=10000     # Events per second
MORPHEUS_MAX_LATENCY=50              # Milliseconds
MORPHEUS_MIN_ACCURACY=95             # Percentage

# ============================================================================
# SERVICE URLS AND NETWORKING
# ============================================================================

# AI Service URLs
IDENTITY_AI_SERVICE_URL=http://localhost:3001
THREAT_AI_SERVICE_URL=http://localhost:3002
AI_DASHBOARD_SERVICE_URL=http://localhost:3003
MOBILE_AI_SERVICE_URL=http://localhost:3004
QUANTUM_GATEWAY_SERVICE_URL=http://localhost:3005

# Morpheus and Triton URLs
TRITON_SERVER_URL=http://localhost:8001
MORPHEUS_API_URL=http://localhost:8889
QUANTUM_MONITOR_URL=http://localhost:3006

# Kafka and messaging
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INPUT_TOPIC=threat-events
KAFKA_OUTPUT_TOPIC=threat-alerts
KAFKA_CONSUMER_GROUP=bg-morpheus-consumer

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Main PostgreSQL database
DATABASE_URL=postgresql://postgres:password@localhost:5432/behaviorguard

# Quantum-specific database
POSTGRES_QUANTUM_URL=postgresql://quantum_user:quantum-secure-db-password@localhost:5433/quantum_security
POSTGRES_QUANTUM_SCHEMA=quantum_security

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_QUANTUM_URL=redis://localhost:6380/1
REDIS_QUANTUM_PASSWORD=quantum-secure-password

# ============================================================================
# SECURITY AND AUTHENTICATION
# ============================================================================

# JWT settings
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Quantum-safe JWT settings
QUANTUM_JWT_ENABLED=true
QUANTUM_TOKEN_EXPIRY=3600
HYBRID_TOKEN_ENABLED=true

# API security
API_RATE_LIMIT=1000              # Requests per minute
API_RATE_LIMIT_WINDOW=60         # Window in seconds
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ID=true

# Metrics and monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3010

# Health check intervals
HEALTH_CHECK_INTERVAL=30         # Seconds
HEALTH_CHECK_TIMEOUT=10          # Seconds

# Performance monitoring
PERFORMANCE_METRICS_ENABLED=true
GPU_METRICS_ENABLED=true
QUANTUM_METRICS_ENABLED=true

# ============================================================================
# DEVELOPMENT AND TESTING
# ============================================================================

# Environment mode
NODE_ENV=development
DEBUG_MODE=true

# Testing configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/bg_test
TEST_REDIS_URL=redis://localhost:6379/15

# Mock services for testing
MOCK_QUANTUM_ENABLED=false
MOCK_GPU_ENABLED=false

# ============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# ============================================================================

# NODE_ENV=production
# DEBUG_MODE=false
# LOG_LEVEL=WARN
# QUANTUM_KEY_ROTATION_INTERVAL=43200    # 12 hours for production
# API_RATE_LIMIT=10000                   # Higher limit for production
# PERFORMANCE_METRICS_ENABLED=true
# QUANTUM_MIGRATION_MODE=enforced        # Enforce quantum security

# ============================================================================
# OPTIONAL FEATURES
# ============================================================================

# Hardware Security Module (HSM) integration
HSM_ENABLED=false
HSM_URL=http://localhost:8443
HSM_KEY_STORAGE_PATH=/hsm/keys

# Quantum Key Distribution (QKD) - future feature
QKD_ENABLED=false
QKD_NETWORK_ID=bg-quantum-network

# Advanced threat detection
ADVANCED_ML_ENABLED=true
BEHAVIORAL_ANALYSIS_ENABLED=true
ANOMALY_DETECTION_SENSITIVITY=0.8

# Mobile-specific settings
MOBILE_QUANTUM_PKI_ENABLED=true
MOBILE_BIOMETRIC_ENCRYPTION=true
MOBILE_OFFLINE_CAPABILITY=true

# ============================================================================
# EXPERIMENTAL FEATURES (use with caution)
# ============================================================================

# Quantum machine learning
QUANTUM_ML_ENABLED=false
QUANTUM_ML_BACKEND=qiskit

# Quantum network protocols
QUANTUM_NETWORK_ENABLED=false
QUANTUM_ENTANGLEMENT_AUTH=false

# Next-generation algorithms (when available)
NEXT_GEN_ALGORITHMS=false
ALGORITHM_AGILITY_MODE=conservative

# ============================================================================
# RESOURCE LIMITS AND SCALING
# ============================================================================

# Memory limits (in MB)
QUANTUM_SERVICE_MEMORY_LIMIT=2048
MORPHEUS_SERVICE_MEMORY_LIMIT=16384
TRITON_SERVICE_MEMORY_LIMIT=8192

# CPU limits
QUANTUM_SERVICE_CPU_LIMIT=1.0
MORPHEUS_SERVICE_CPU_LIMIT=8.0
TRITON_SERVICE_CPU_LIMIT=4.0

# Scaling configuration
AUTO_SCALING_ENABLED=false
MIN_REPLICAS=1
MAX_REPLICAS=5
TARGET_CPU_UTILIZATION=80

# ============================================================================
# BACKUP AND DISASTER RECOVERY
# ============================================================================

# Backup settings
QUANTUM_KEY_BACKUP_INTERVAL=3600     # 1 hour
MODEL_BACKUP_ENABLED=true
CONFIG_BACKUP_ENABLED=true

# Disaster recovery
DR_ENABLED=false
DR_SITE_URL=https://dr.behaviorguard.com
FAILOVER_THRESHOLD=95                 # Percentage uptime threshold